<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <top.defaults.drawabletoolboxapp.CheckerboardRelativeLayout
        android:id="@+id/imageViewBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/animateCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#7FFFFFFF"
            android:paddingEnd="8dp"
            android:paddingRight="8dp"
            android:text="@string/animate"
            android:textColor="@color/colorPrimary"
            tools:ignore="RtlSymmetry"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/background_black_transparent"
            android:clickable="true"
            android:contentDescription="@string/drawable_host"
            android:focusable="true"
            android:layerType="software"/>
    </top.defaults.drawabletoolboxapp.CheckerboardRelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:minHeight="0dp"
        android:padding="8dp"
        android:textAllCaps="false"
        android:textAppearance="?android:attr/textAppearance"/>

    <LinearLayout
        android:id="@+id/segmentedControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/segment1"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/item_1"/>

        <TextView
            android:id="@+id/segment2"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/item_2"/>

        <TextView
            android:id="@+id/segment3"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/item_3"/>
    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_white_transparent"
        android:gravity="center"
        android:padding="8dp"/>
</LinearLayout>